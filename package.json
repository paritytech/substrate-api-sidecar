{
  "name": "substrate-api-sidecar",
  "version": "0.18.0",
  "description": "REST service that makes it easy to interact with blockchain nodes built using Substrate's FRAME framework.",
  "scripts": {
    "preinstall": "yarn build:calc",
    "postinstall": "yarn upgrade @substrate/calc",
    "build": "tsc",
    "build:calc": "bash ./calc/build.sh",
    "build:docker": "docker build -t substrate-api-sidecar .",
    "build:docs": "(cd docs && yarn && yarn build)",
    "main": "node ./build/src/main.js",
    "lint": "tsc && eslint . --ext ts",
    "start": "yarn run build && yarn run main",
    "dev": "tsc-watch --onSuccess \"yarn run main\"",
    "test": "jest"
  },
  "author": "Parity Technologies <admin@parity.io>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@polkadot/api": "^1.34.0-beta.11",
    "@polkadot/util-crypto": "^3.4.1",
    "@substrate/calc": "file:./calc/pkg",
    "body-parser": "^1.19.0",
    "confmgr": "^1.0.6",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.8",
    "@types/express-serve-static-core": "^4.17.12",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^26.0.14",
    "@types/morgan": "^1.9.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.3.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.2"
  }
}
